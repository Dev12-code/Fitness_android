<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/dialog_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/hurme_geometric_sans1_bold"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="18sp"
                tools:text="Lorem Ipsum" />

        <TextView
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5.5sp"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

            <Button
                    android:id="@+id/left_btn"
                    style="@style/common_red_btn_style"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/common_red_btn_bg"
                    android:elevation="0dp"
                    android:outlineSpotShadowColor="@color/transparent"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:text="Cancdsadsdsamdsnda,smdsadaadsael"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

            <Button
                    android:layout_gravity="right"
                    android:id="@+id/right_btn"
                    style="@style/common_btn_style"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:text="Ok"
                    android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>