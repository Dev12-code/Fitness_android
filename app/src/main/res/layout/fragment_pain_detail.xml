<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="0sp"
                android:text="-:-"
                android:textColor="#333333"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="0sp"
                android:text="Video &amp; Audio"
                android:textColor="#a5a5a5"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#d8d8d8" />

        <TextView
            android:id="@+id/area_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/hurme_geometric_sans1"
            android:textColor="#333333"
            android:textSize="24sp" />


        <LinearLayout
            android:id="@+id/paint_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pain_understanding_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:gravity="center_horizontal"
                    android:text="Understanding Pain"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/understand_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="-"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text=" Videos"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/dot_888888" />

                    <TextView
                        android:id="@+id/understand_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="-"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text=" mins"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pain_understanding_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pain_mobility_rx_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pain_mobility_rx_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:gravity="center_horizontal"
                    android:text="Your Mobility RX Pain Prescription"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mobility_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="-"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text=" Videos"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/dot_888888" />

                    <TextView
                        android:id="@+id/mobility_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="-"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text=" mins"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pain_mobility_rx_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pain_advance_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:gravity="center_horizontal"
                    android:text="Advanced Pain Techniques"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/advance_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="-"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text=" Videos"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_margin="6dp"
                        android:background="@drawable/dot_888888" />

                    <TextView
                        android:id="@+id/advance_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text="-"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="0sp"
                        android:text=" mins"
                        android:textColor="#a5a5a5"
                        android:textSize="11sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pain_advance_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>