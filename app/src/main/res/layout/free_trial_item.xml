<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviewer_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/user_avatar_default" />

    <TextView
            android:id="@+id/reviewer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hurme_geometric_sans1_bold"
            android:textColor="#333333"
            android:textSize="16sp" />

    <TextView
            android:id="@+id/reviewer_member_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/hurme_geometric_sans1"
            android:lineSpacingExtra="0sp"
            android:textColor="#a5a5a5"
            android:textSize="14sp" />

    <RatingBar
            android:id="@+id/rating_bar_basic"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"
            android:theme="@style/RatingBar" />

    <TextView
            android:id="@+id/reviewer_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:fontFamily="@font/hurme_geometric_sans1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6.5sp"
            android:scrollbars="vertical"
            android:textColor="#666666"
            android:textSize="17sp" />
</LinearLayout>