<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:outlineSpotShadowColor="#2d00ff">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/workout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp">

        <ImageView
                android:id="@+id/relate_video_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="@drawable/pre_post_bg"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:minWidth="35dp"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/relate_video_image"
                app:layout_constraintTop_toTopOf="@id/relate_video_image"
                tools:text="Pre" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/relate_video_image"
                app:layout_constraintLeft_toRightOf="@id/relate_video_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/relate_video_image">

            <TextView
                    android:id="@+id/video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="14sp"
                    tools:text="Title videdmsdmaldmsaldamslkdasdsadadsadasdsadaddsadadsadsadsadadsadsadsadsadsadsadasdklas d salddsa dasd asdsadsado" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/video_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="-2sp"
                        tools:text="6"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="10sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="-2sp"
                        android:text=" min"
                        android:textColor="@color/color_text_secondary"
                        android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <View
                android:id="@+id/bg_premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B2000000"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>