<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="2dp"
        android:foreground="?attr/selectableItemBackground">

    <ImageView
            android:id="@+id/practice_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mobility_test_0" />

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000" />

    <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_bg" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/practice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                android:text="@string/trunk"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

            <ImageView
                    android:id="@+id/expand_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/white_circle_bg"
                    android:padding="4dp"
                    android:src="@drawable/ic_arrow_drop_down_blue" />

            <TextView
                    android:id="@+id/practice_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/today_suggested_videos"
                    android:textColor="#dddddd"
                    android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>