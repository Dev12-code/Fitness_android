<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginEnd="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:outlineSpotShadowColor="#2d00ff">

    <FrameLayout
            android:layout_width="249dp"
            android:layout_height="139dp">

        <ImageView
                android:id="@+id/relate_video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_image_2" />

        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33000000" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                    android:gravity="center_horizontal"
                    android:lines="1"
                    android:text="Title video"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/video_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1_semi_bold"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="-2sp"
                        tools:text="6"
                        android:textColor="#dddddd"
                        android:textSize="16sp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hurme_geometric_sans1"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="-2sp"
                        android:text=" min"
                        android:textColor="#dddddd"
                        android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="@drawable/pre_post_bg"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:minWidth="40dp"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="gone" />

        <View
                android:id="@+id/bg_premium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B2000000"
                android:visibility="gone" />
    </FrameLayout>
</FrameLayout>