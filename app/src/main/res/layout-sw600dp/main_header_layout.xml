<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

    <FrameLayout
            android:id="@+id/frame_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/home_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/home_icon"
                android:foreground="?attr/selectableItemBackground" />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/frame_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/frame_leaderboard"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/user_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/user_icon_new"
                android:foreground="?attr/selectableItemBackground" />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/frame_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/favourite_icon"
                android:layout_width="26dp"
                android:layout_height="22.6dp"
                android:background="@drawable/heart_icon"
                android:foreground="?attr/selectableItemBackground" />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/frame_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/frame_favorite"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/progress_icon"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:background="@drawable/business_icon"
                android:foreground="?attr/selectableItemBackground" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>