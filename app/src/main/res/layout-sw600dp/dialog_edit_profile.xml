<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dialog_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/hurme_geometric_sans1_bold"
            android:text="Edit Profile"
            android:textColor="#333333"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/hurme_geometric_sans1"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0sp"
            android:text="@string/update_your_information_using_the_fileds_belows"
            android:textColor="#666666"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#e7e7e7"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:hint="First name"
                android:inputType="textPersonName"
                android:lineHeight="14sp"
                android:paddingEnd="10dp"
                android:textColor="#888888"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#e7e7e7"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:hint="Last name"
                android:inputType="textPersonName"
                android:lineHeight="14sp"
                android:paddingEnd="10dp"
                android:textColor="#888888"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#e7e7e7"
                android:focusable="false"
                android:fontFamily="@font/hurme_geometric_sans1"
                android:hint="MM/DD/YYYY"
                android:lineHeight="14sp"
                android:paddingEnd="10dp"
                android:textColor="#888888"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/cancel_btn"
                style="@style/common_red_btn_style"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/common_red_btn_bg"
                android:elevation="0dp"
                android:outlineSpotShadowColor="@color/transparent"
                android:text="Cancel"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/save_btn"
                style="@style/common_btn_style"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_bg"
                android:text="Save"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>